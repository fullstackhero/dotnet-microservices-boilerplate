{
  "AppConfig": {
    "Name": "Gateway"
  },
  "AllowedHosts": "*",
  "LoggerConfig": {
    "Level": "Information",
    "LogTemplate": "{Timestamp:HH:mm:ss} [{Level:u4}] {Message:lj}{NewLine}{Exception}"
  },
  "AuthOptions": {
    "Authority": "https://localhost:5200"
  },
  "ReverseProxy": {
    "routes": {
      "catalog": {
        "clusterId": "catalog",
        "match": {
          "path": "/catalog/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "identity": {
        "clusterId": "identity",
        "match": {
          "path": "/identity/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "clusters": {
      "catalog": {
        "destinations": {
          "catalog": {
            "address": "http://localhost:5030"
          }
        }
      },
      "identity": {
        "destinations": {
          "identity": {
            "address": "http://localhost:5020"
          }
        }
      }
    }
  }
}